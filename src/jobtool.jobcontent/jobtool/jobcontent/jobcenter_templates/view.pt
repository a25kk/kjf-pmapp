<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="jobtool.jobcontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

    <section id="jobcenter-dashboard"
      tal:define="context_url context/absolute_url">
      <header id="page-header">
        <div class="pull-right">
          <form action=".">
              <div class="input-append">
                <input class="span2" id="appendedInputButton" type="text">
                <input class="btn" type="submit" value="Search" />
              </div>
          </form>
        </div>
        <h1>Jobcenter</h1>
      </header>
      <article id="content-core">
        <div class="row-fluid">
          <div class="span9">
            <div class="window-column">
              <div class="tile">
                  <div class="row-fluid">
                    <div class="span2">
                      <h4>16.11.2012</h4>
                      <p><strong></strong>Teilzeit</p>
                    </div>
                    <div class="span6">
                      <h4><i class="icon-star"></i> Heilpädagogin/en oder Sozialpädagogin/en <small class="label">Aktiv</small></h4>
                      <p><small>Augsburg, Klinik Josefinum</small></p>
                    </div>
                    <div class="span4">
                        <a href class="btn btn-small pull-right">Edit</a>
                    </div>
                  </div>
                </div>
            </div>
          </div>
          <div class="span3">
            <aside id="sidebar">
              <h4>Informationen</h4>
                <p class="muted">
                  <span i18n:translate="">Last changed:</span>
                  <span tal:content="view/last_modified">12.12.2012</span>
                </p>
                <p>
                  <a href="" class="btn btn-primary btn-large"
                    rel="twipsy"
                    data-placement="left"
                    data-original-title="Add new job posting now"
                    tal:attributes="href python:context_url + '/++add++jobtool.jobcontent.jobopening'">
                    <i class="icon-list-alt"></i>
                    Add job opening
                  </a>
                </p>
            </aside>
          </div>
        </div>
      </article>
    </section>
    
  </metal:content-core>
</metal:main>

</body>
</html>

