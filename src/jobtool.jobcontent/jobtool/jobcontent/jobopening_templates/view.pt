<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="jobtool.jobcontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

    <section id="jobcenter-dashboard"
      tal:define="context_url context/absolute_url;
                  toLocalizedTime nocall:context/@@plone/toLocalizedTime">
      <header id="page-header">
        <div class="pull-right">
            <h4 tal:content="context/jobtype" />
            <h5 tal:define="date context/start"
              tal:content="python:toLocalizedTime(date, long_format=False)" />
        </div>

        <h1 tal:content="context/Title">Title</h1>

        <p tal:define="time context/modified" class="discreet">
              <span i18n:translate="">Last changed:</span>
              <span tal:content="time"
                 tal:attributes="data-appui string:prettydate;
                                 title time" />
        </p>
      </header>
      <article id="content-core">
        <div class="row-fluid">
          <div class="span9">
            <div class="window-column">
              <div class="window-column-content">
                <a href="#" class="btn btn-primary btn-small pull-right">
                  Edit</a>
                <div tal:content="structure context/text/output" />
              </div>
            </div>
          </div>
          <div class="span3">
            <aside id="sidebar">
              <a href="#" class="btn btn-primary btn-mini pull-right">
                  Edit</a>
              <h4>Informationen</h4>
                <p class="muted"
                  tal:define="time context/modified">
                  <span i18n:translate="">Last changed:</span>
                  <span tal:content="time"
                     tal:attributes="data-appui string:prettydate;
                                     title time" />
                </p>
                <div class="panel">
                  <p tal:content="context/institution" />
                  <p tal:content="context/location" />
                  <p><span class="badge" tal:content="context/jobtype" /></p>
                </div>
                <h6>Datum</h6>
                  <p tal:content="context/start" />
                <hr />
                <a href="#" class="btn btn-primary btn-mini pull-right">
                  Edit</a>
                <h4>Einstellungen</h4>
                <div class="panel">
                  <h6>Kategory</h6>
                  <tal:cats tal:repeat="cat context/category">
                    <span tal:content="cat" />
                  </tal:cats>
                  <h6>Preview</h6>
                  <p tal:content="context/preview" />
                </div>
                <!--<p>
                  <a href="" class="btn btn-primary btn-large"
                    rel="twipsy"
                    data-placement="left"
                    data-original-title="Add new job posting now"
                    tal:attributes="href python:context_url + '/++add++jobtool.jobcontent.jobopening'">
                    <i class="icon-list-alt"></i>
                    Add job opening
                  </a>
                </p>-->
            </aside>
          </div>
        </div>
      </article>
    </section>
  </metal:content-core>
</metal:main>

</body>
</html>

