<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="pressapp.channelmanagement">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

    <div class="container-fluid"
        tal:define="portal_state context/@@plone_portal_state;
                    portal_url portal_state/portal_url;
                    context_url context/absolute_url;">
    
    <div class="page-header">
        <h1>Administration: Adressen</h1>
    </div>
    
    <div class="row-fluid">
        <div class="span6">
            <h2><i class="icon-list-alt" />
                Adressen</h2>
                    <div class="tile stats">
                      <h4><span class="label label-info"
                          tal:content="view/subscriber_count" />
                        Kontakte</h4>
                        <p class="xpull-right btn-group"
                            tal:define="channel view/active_channel;
                                        channel_url channel/getURL;">
                            <a class="btn btn-small"
                                tal:attributes="href channel_url">
                                <i class="icon-eye-open" />
                                Anzeigen</a>
                            <a class="btn btn-small"
                                tal:attributes="href python:channel_url+'/++add++pressapp.channelmanagement.subscriber'">
                                <i class="icon-plus-sign" />
                                  Neuen Kontakt anlegen</a>
                        </p>
                    </div>
          <h3><i class="icon-search" />
              Sofortsuche</h3>
            <div class="well">
                <form name="searchform" id="searchGadget_form" 
                      action="search"
                      tal:attributes="action string:${portal_url}/search;
                                      id string:search_form">

                    <div class="LSBox">
                    <label class="hiddenStructure hidden"
                        for="searchGadget"
                           i18n:translate="text_search">Search Subscriber</label>

                    <input name="SearchableText"
                           type="text"
                           size="18"
                           value=""
                           title="..."
                           accesskey="4"
                           i18n:attributes="title title_search_site;"
                           tal:attributes="value request/form/SearchableText|nothing;
                                           id string:searchGadget"
                           class="searchField inputLabel" />

                    <input class="searchButton btn primary small"
                           type="submit"
                           value="Search"
                           i18n:attributes="value label_search;" />

                    <div class="LSResult" id="LSResult" style=""><div class="LSShadow" id="LSShadow"></div></div>
                    </div>
                </form>
            </div>
        </div>
        <div class="span6">
            <h2><i class="icon-list-alt" /> Verteiler</h2>
            <div class="tile stats">
                  <h4><span
                      class="label label-info"
                      tal:content="view/channel_counter" />
                   Verteiler</h4>
                    <p class="btn-group"
                        tal:define="channel view/active_channel;
                                    channel_url channel/getURL;">
                        <a class="btn btn-small"
                            tal:attributes="href python:context_url+'/@@channel-statistics'">
                            <i class="icon-eye-open" />
                            Anzeigen</a>
                    </p>
                </div>
            <div class="box" tal:define="channel_list view/channel_names">
                <h3>Verteiler <small>&Uuml;bersicht</small></h3>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Verteiler</th>
                            <th>Adressen</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr tal:repeat="item channel_list">
                            <td tal:define="channel item/channel">
                              <a href=""
                                  tal:attributes="href python:context_url+'/@@channel-information?channelname='+channel"
                                  tal:content="item/channelname">
                                  Anzeigen</a>
                            </td>
                            <td>
                                <strong class="label" tal:content="item/count" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
        
    </div>
    
  </metal:content-core>
</metal:main>

</body>
</html>

