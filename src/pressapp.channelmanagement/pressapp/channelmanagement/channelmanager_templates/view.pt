<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="pressapp.channelmanagement">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

    <div class="container-fluid"
        tal:define="portal_state context/@@plone_portal_state;
                    portal_url portal_state/portal_url;
                    context_url context/absolute_url;
                    channel view/active_channel;
                    channel_url channel/getURL">
    
    <div class="page-header" id="page-header">
      <div class="pull-right">
        <h4>Ãœbersicht</h4>
      </div>
        <h1>Verteiler</h1>
        <p class="discreet">Administration Verteiler und Adressen</p>
    </div>

    <section id="content-core">
    <div class="row">
        <div class="span9">
          <div class="window-column">
            <section tal:define="items view/statistic_data">
              <div class="row">
                <tal:block tal:repeat="item items">
                  <div class="span6">
                  <div class="featurette dim-in two">
                      <div class="row">
                        <div class="span9">
                          <h3 tal:content="item/name">Channel</h3>
                          <p>
                            <span class="badge" tal:content="item/pr_count" />
                            Pressemitteilungen
                          </p>
                          <p>
                              <span class="badge" tal:content="item/pi_count" />
                              Presseeinladungen
                          </p>
                        </div>
                        <div class="span3">
                          <div class="stats widget">
                            <span class="stat primary">
                              <span class="stat-header">
                                <i class="icon-envelope"></i></span>
                              <span class="stat-subheader">
                                <span class="xbadge xbadge-info" tal:content="item/subscriber" />
                              </span>
                            </span>
                          </div>
                          <form class="xpull-right"
                              tal:attributes="action python:context_url+'/@@channel-information'">
                              <input href="" class="btn btn-small btn-block"
                                  type="submit" value="Anzeigen" />
                              <input name="channeltrigger" id="channeltrigger" type="hidden"
                                  class="large uneditable-input"
                                  value="Kontakte" />
                              <input name="channelname" id="channelname" type="hidden"
                                  class="large uneditable-input"
                                  tal:attributes="value item/channel" />
                          </form>
                        </div>
                      </div>
                  </div>
                  </div>
                </tal:block>
              </div>
            </section>
          <div class="page-header">
            <h2><span tal:content="view/subscriber_count" />
                <a href=""
                  rel="twipsy"
                  data-original-title="Zur &Uuml;bersicht aller Adressen"
                  tal:attributes="href channel_url">
                  Adressen</a>
            </h2>
          </div>
            <section tal:condition="view/has_subscribers">
              <table class="table table-condensed table-striped table-bordered"
                  id="table-contacts"
                  tal:define="items view/subscribers">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>E-Mail</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr tal:repeat="item items">
                            <td>
                              <a href=""
                                  tal:attributes="href item/getURL"
                                  tal:content="item/Title">
                                  Anzeigen</a>
                            </td>
                            <td>
                                <span tal:replace="item/email" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </section>
          </div>
        </div>
        <div class="span3">
          <aside id="sidebar">
            <div class="stats widget">
              <div class="stat inverse">
                <h2 tal:content="view/subscriber_count">72</h2>
                <h6>Adressen</h6>
              </div>
            </div>
            <hr>
              <a class="btn btn-block btn-primary"
                tal:attributes="href python:channel_url+'/@@add-subscriber'">
                  Neuen Kontakt anlegen</a>
            <hr>
              <p>Overview of all contact addresses
              </p>
              <a href="" class="btn"
                  rel="twipsy"
                  data-original-title="Zur &Uuml;bersicht aller Adressen"
                  tal:attributes="href channel_url">
                  Adressen</a>
          </aside>
          <div class="page-header">
            <h2><span
                  tal:content="view/channel_counter" />
              <a href=""
                rel="twipsy"
                data-original-title="Zur &Uuml;bersicht aller Verteiler"
                tal:attributes="href python:context_url+'/@@channel-statistics'">
              Verteiler</a></h2>
          </div>
            <div tal:define="channel_list view/channel_names">
                <table class="table table-condensed xtable-bordered" id="xtable-channels">
                    <thead>
                        <tr>
                            <th>Verteiler</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr tal:repeat="item channel_list">
                            <td tal:define="channel item/channel">
                              <a href=""
                                  tal:attributes="href python:context_url+'/@@channel-information?channelname='+channel"
                                  tal:content="item/channelname">
                                  Anzeigen</a>
                            </td>
                            <td>
                                <span class="badge badge-info" tal:content="item/count" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </section>
        
    </div>
    
  </metal:content-core>
</metal:main>

</body>
</html>

