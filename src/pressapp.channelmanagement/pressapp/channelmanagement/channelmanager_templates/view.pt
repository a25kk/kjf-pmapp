<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="pressapp.channelmanagement">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

    <div class="container"
        tal:define="portal_state context/@@plone_portal_state;
                    portal_url portal_state/portal_url">
        <div class="row">
            <div class="cell position-0 width-1:2">
                <h1 class="documentFirstHeading" tal:content="context/Title" />
                <div class="well">
                    <form name="searchform" id="searchGadget_form" 
                          action="search"
                          tal:attributes="action string:${portal_url}/search;
                                          id string:search_form">

                        <div class="LSBox">
                        <label class="hiddenStructure"
                            for="searchGadget"
                               i18n:translate="text_search">Search Subscriber</label>

                        <input name="SearchableText"
                               type="text"
                               size="18"
                               value=""
                               title="..."
                               accesskey="4"
                               i18n:attributes="title title_search_site;"
                               tal:attributes="value request/form/SearchableText|nothing;
                                               id string:searchGadget"
                               class="searchField inputLabel" />

                        <input class="searchButton btn mini"
                               type="submit"
                               value="Search"
                               i18n:attributes="value label_search;" />

                        <div class="LSResult" id="LSResult" style=""><div class="LSShadow" id="LSShadow"></div></div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="cell position-1:2 width-1:2">
                <div class="box" tal:define="channel_list view/channel_names">
                    <h3>Verteiler</h3>
                    <table class="condensed-table">
                        <thead>
                            <tr>
                                <th>Verteiler</th>
                                <th>Anzahl Kontakte</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr tal:repeat="item channel_list">
                                <td tal:content="item/channel">Channel</td>
                                <td tal:content="item/count">Subscriber Count</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="visualClear"><!-- --></div>
        
        <section tal:define="context_url context/absolute_url;
                             Batch python:modules['Products.CMFPlone'].Batch;
                             b_size python:25;b_start python:0;b_start request/b_start | b_start;">
            <div class="box">
                <p class="pull-right" tal:condition="view/has_channels">
                      <a class="editbtn mini standalone popoverForm"
                        tal:define="channel view/active_channel;
                                    channel_url channel/getURL;"
                        tal:attributes="href python:channel_url+'/@@add-press-release'">
                          Neuen Kontakt anlegen</a>
                </p>
                <h3>Kontakte <small>Liste aller Kontaktadressen</small></h3>
                  <table class="bordered-table zebra-striped">
                      <thead>
                          <tr>
                              <th>#</th>
                              <th>E-Mail-Adresse</th>
                              <th>Kontaktname</th>
                              <th>Aktionen</th>
                          </tr>
                      </thead>
                      <tbody tal:condition="view/has_subscribers">
                          <tal:subscribers tal:define="items view/subscribers;
                                                       batch python:Batch(items, b_size, int(b_start), orphan=1)">
                          <tal:block tal:repeat="item batch">
                            <tr tal:define="rowcount repeat/item/number;">
                                <td tal:content="rowcount">1</td>
                                <td>
                                    <span tal:content="item/email" />
                                </td>
                                <td>
                                    <span tal:content="item/Title" />
                                </td>
                                <td tal:define="item_url item/getURL">
                                    <a class="editbtn mini standalone"
                                        tal:attributes="href python:item_url+'/edit'">Bearbeiten</a>
                                </td>
                            </tr>
                          </tal:block>
                          <div metal:use-macro="context/batch_macros/macros/navigation" />
                          </tal:subscribers>
                      </tbody>
                      <tbody tal:condition="not:view/has_subscribers">
                            <tr>
                                <td>&nbsp;</td>
                                <td colspan="3">
                                    <div class="alert-message block-message error">
                                          <a class="close" href="#">Ã—</a>
                                          <p><strong i18n:translate="">
                                              There are no subscribers yet</strong></p>
                                    </div>
                                </td>
                            </tr>
                      </tbody>
                  </table>
            </div>
        </section>
        
    </div>
    
  </metal:content-core>
</metal:main>

</body>
</html>

