<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="pressapp.channelmanagement">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

    <div class="container"
        tal:define="portal_state context/@@plone_portal_state;
                    portal_url portal_state/portal_url;
                    context_url context/absolute_url;">
        <div class="row">
            <div class="cell position-0 width-1:2">
                <h1 class="documentFirstHeading" tal:content="context/Title" />
                <div class="well">
                    <form name="searchform" id="searchGadget_form" 
                          action="search"
                          tal:attributes="action string:${portal_url}/search;
                                          id string:search_form">

                        <div class="LSBox">
                        <label class="hiddenStructure"
                            for="searchGadget"
                               i18n:translate="text_search">Search Subscriber</label>

                        <input name="SearchableText"
                               type="text"
                               size="18"
                               value=""
                               title="..."
                               accesskey="4"
                               i18n:attributes="title title_search_site;"
                               tal:attributes="value request/form/SearchableText|nothing;
                                               id string:searchGadget"
                               class="searchField inputLabel" />

                        <input class="searchButton btn primary small"
                               type="submit"
                               value="Search"
                               i18n:attributes="value label_search;" />

                        <div class="LSResult" id="LSResult" style=""><div class="LSShadow" id="LSShadow"></div></div>
                        </div>
                    </form>
                </div>
                <div class="tile stats">
                    <strong tal:content="view/channel_counter" />
                    <p class="pull-right">
                        <a href="" class="editbtn mini standalone info"
                            tal:attributes="href python:context_url+'/@@channel-statistics'">
                            Anzeigen</a>
                    </p>
                    <h5>Verteiler</h5>
                </div>
                <div class="tile stats">
                    <strong tal:content="view/subscriber_count" />
                    <p class="pull-right"
                        tal:define="channel view/active_channel;
                                    channel_url channel/getURL;">
                        <a class="editbtn mini standalone"
                            tal:attributes="href python:channel_url+'/++add++pressapp.channelmanagement.subscriber'">
                              Neuen Kontakt anlegen</a>
                        <a class="editbtn mini standalone"
                            tal:attributes="href channel_url">Anzeigen</a>
                    </p>
                    <h5>Kontakte</h5>
                </div>
            </div>
            <div class="cell position-1:2 width-1:2">
                <div class="box" tal:define="channel_list view/channel_names">
                    <h3>Verteiler <small>Statistiken</small></h3>
                    <tal:block tal:repeat="item channel_list">
                        <div class="tile stats">
                            <strong tal:content="item/count" />
                            <form class="xpull-right"
                                tal:attributes="action python:context_url+'/@@channel-information'">
                                <input href="" class="btn primary small pull-right"
                                    type="submit" value="Anzeigen" />
                                        <input name="channelname" id="channelname" type="text"
                                            class="large uneditable-input"
                                            tal:attributes="value item/channel" />
                            </form>
                            <!--<p tal:content="item/channel" />-->
                        </div>
                    </tal:block>
                </div>
            </div>
        </div>
        <div class="visualClear"><!-- --></div>
        
    </div>
    
  </metal:content-core>
</metal:main>

</body>
</html>

