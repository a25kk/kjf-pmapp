<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="pressapp.channelmanagement">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">
    
    <p class="pull-right">
          <a class="btn btn-large"
            tal:define="context_url context/absolute_url;"
            tal:attributes="href python:context_url+'/edit'">
            <i class="icon-edit" />
              Bearbeiten</a>
    </p>
    
    <h1 class="documentFirstHeading">Kontaktinformationen
        <small tal:content="context/Title" /></h1>
    
    <div class="row">
        <div class="cell position-0 width-1:2">
        <section class="box">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th colspan="2"><h3>Kontaktdetails</h3></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Kontaktname:</td>
                        <td tal:content="context/Title">Name</td>
                    </tr>
                    <tr>
                        <td>E-Mail-Adresse:</td>
                        <td tal:content="context/email">Name</td>
                    </tr>
                    <tr>
                        <td>Kontaktperson:</td>
                        <td tal:content="context/contact">Name</td>
                    </tr>
                    <tr>
                        <td>Telefon:</td>
                        <td tal:content="context/phone">Name</td>
                    </tr>
                    <tr>
                        <td>Mobil:</td>
                        <td tal:content="context/mobile">Name</td>
                    </tr>
                    <tr>
                        <td>Fax:</td>
                        <td tal:content="context/fax">Name</td>
                    </tr>
                    <tr>
                        <td>Kommentar:</td>
                        <td tal:content="context/comment">Name</td>
                    </tr>
                </tbody>
            </table>
        </section>
        </div>
        <div class="cell position-1:2 width-1:2">
            <div class="box">
                <h3>Verteiler:</h3>
                <ul tal:define="channels context/channel">
                    <li tal:repeat="channel channels">
                        <span tal:replace="channel" />
                    </li>
                </ul>
            </div>
        </div>
    </div>
    
  </metal:content-core>
</metal:main>

</body>
</html>

