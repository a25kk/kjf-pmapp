<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="pressapp.channelmanagement">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">
    
    <p class="pull-right">
          <a
            tal:define="context_url context/absolute_url;"
            tal:attributes="href python:context_url+'/edit'">
            <i class="icon-edit" />
              Bearbeiten</a>
    </p>
    
    <h1 class="documentFirstHeading">Kontaktinformationen
        <small tal:content="context/Title" /></h1>
    
    <div class="row-fluid">
        <div class="span6">
        <section class="box">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th colspan="2"><h3>Kontaktdetails</h3></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Kontaktname:</td>
                        <td tal:content="context/Title">Name</td>
                    </tr>
                    <tr>
                        <td>E-Mail-Adresse:</td>
                        <td tal:content="context/email">Name</td>
                    </tr>
                    <tr>
                        <td>Kontaktperson:</td>
                        <td tal:content="context/contact">Name</td>
                    </tr>
                    <tr>
                        <td>Telefon:</td>
                        <td tal:content="context/phone">Name</td>
                    </tr>
                    <tr>
                        <td>Mobil:</td>
                        <td tal:content="context/mobile">Name</td>
                    </tr>
                    <tr>
                        <td>Fax:</td>
                        <td tal:content="context/fax">Name</td>
                    </tr>
                    <tr>
                        <td>Kommentar:</td>
                        <td tal:content="context/comment">Name</td>
                    </tr>
                </tbody>
            </table>
        </section>
        </div>
        <div class="span6">
            <div class="box">
                <h3>Verteiler:
                    <small>
                        <tal:block tal:repeat="item view/selected_channels">
                            <span class="badge badge-success" tal:content="item/channelname" />
                        </tal:block>
                    </small>
                </h3>
                <div class="visualClear">&nbsp;</div>
                <div class="form-inline"
                     tal:define="channels view/channels">
                    <div class="controls"
                        tal:repeat="channel channels">
                        <div class="input-prepend pull-left"
                            tal:define="used channel/active">
                            <tal:block tal:condition="python:used == False">
                                <span class="add-on"><i class="icon-check" /></span> <span class="input-large uneditable-input" tal:content="channel/channelname">Some value here</span>
                            </tal:block>
                            <tal:block tal:condition="python:used == True">
                                <span class="add-on"><i class="icon-check-empty" /></span> <input class="input-large disabled" id="disabledInput" type="text" disabled tal:attributes="placeholder channel/channelname" />
                            </tal:block>
                        </div>
                    </div>
                </div>
                <div class="visualClear"><!-- --></div>
            </div>
        </div>
    </div>
    
  </metal:content-core>
</metal:main>

</body>
</html>

