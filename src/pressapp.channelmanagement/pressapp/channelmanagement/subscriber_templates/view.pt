<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="pressapp.channelmanagement">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">
    
    <header class="page-header" id="page-header">
        <div class="pull-right">
            <h4>Kontaktinformationen</h4>
          <a
            tal:define="context_url context/absolute_url;"
            tal:attributes="href python:context_url+'/@@edit-subscriber'">
            <i class="icon-edit" />
              Bearbeiten</a>
        </div>
    
        <h1 class="documentFirstHeading" tal:content="context/Title">Title</h1>
        <p tal:define="time context/modified" class="discreet">
              <span i18n:translate="">Last changed:</span>
              <span tal:content="time"
                 tal:attributes="data-appui string:prettydate;
                                 title time" />
        </p>
    </header>

    <section id="content-core">
    
    <div class="row">
        <div class="col col-lg-9">
        <section class="window-column">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th colspan="2"><h3>Kontaktdetails</h3></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Kontaktname:</td>
                        <td tal:content="context/Title">Name</td>
                    </tr>
                    <tr>
                        <td>E-Mail-Adresse:</td>
                        <td tal:content="context/email">Name</td>
                    </tr>
                    <tr>
                        <td>Kontaktperson:</td>
                        <td tal:content="context/contact">Name</td>
                    </tr>
                    <tr>
                        <td>Telefon:</td>
                        <td tal:content="context/phone">Name</td>
                    </tr>
                    <tr>
                        <td>Mobil:</td>
                        <td tal:content="context/mobile">Name</td>
                    </tr>
                    <tr>
                        <td>Fax:</td>
                        <td tal:content="context/fax">Name</td>
                    </tr>
                    <tr>
                        <td>Kommentar:</td>
                        <td tal:content="context/comment">Name</td>
                    </tr>
                </tbody>
            </table>
        </section>
        </div>
        <div class="col col-lg-3">
            <div class="sidebar">
                <h4>Verteiler:
                </h4>
                <p>
                    <tal:block tal:repeat="item view/selected_channels">
                        <span class="coutner badge-success" tal:content="item/channelname" />
                    </tal:block>
                </p>
                <hr class="visualClear" />
                <div class="form-inline"
                     tal:define="channels view/channels">
                    <div class="controls"
                        tal:repeat="channel channels">
                        <div class="input-prepend pull-left"
                            tal:define="used channel/active">
                            <tal:block tal:condition="python:used == False">
                                <span class="add-on"><i class="icon-check" /></span> <span class="input-large uneditable-input" tal:content="channel/channelname">Some value here</span>
                            </tal:block>
                            <tal:block tal:condition="python:used == True">
                                <span class="add-on"><i class="icon-check-empty" /></span> <input class="input-large disabled" id="disabledInput" type="text" disabled tal:attributes="placeholder channel/channelname" />
                            </tal:block>
                        </div>
                    </div>
                </div>
                <div class="visualClear"><!-- --></div>
            </div>
        </div>
    </div>
    </section>
  </metal:content-core>
</metal:main>

</body>
</html>

