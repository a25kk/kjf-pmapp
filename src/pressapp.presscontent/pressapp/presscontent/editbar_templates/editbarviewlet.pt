<div class="editbar" id="editbar">
    <div class="editbar-inner"
        tal:define="context_url viewlet/context_url;
                    context_state context/@@plone_context_state">
        <div class="container-fluid">
            <div class="btn-toolbar container-fluid">
                <div class="btn-group">
                    <a href="" tal:attributes="href context_state/canonical_object_url"
                        class="btn btn-large btn-inverse">
                        <i class="icon-home icon-white" />
                        Arbeitsplatz
                    </a>
                </div>
                <div class="btn-group">
                    <a class="btn btn-large"
                        tal:attributes="href python:context_url+'/@@dashboard-statistics'">
                        <i class="icon-share-alt" />
                        Statistik</a>
                </div>
                <div class="btn-group">
                    <a href="" class="btn btn-large dropdown-toggle"
                        data-toggle="dropdown">
                        <i class="icon-plus" />
                        Inhalte hinzuf&uuml;gen</a>
                    <ul class="dropdown-menu">
                        <li><a href=""
                                tal:attributes="href python:context_url + '/@@add-press-release'">
                            <i class="icon-file" />
                                Pressmitteilung</a></li>
                        <li class="divider"></li>
                        <li><a href=""
                                tal:attributes="href python:context_url + '/@@add-press-invitation'">
                            <i class="icon-calendar" />
                                Presseeinladung</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>