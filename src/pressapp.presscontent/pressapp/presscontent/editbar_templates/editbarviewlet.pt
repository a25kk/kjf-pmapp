<div class="editbar" id="editbar">
    <div class="editbar-inner"
        tal:define="context_url viewlet/context_url">
        <div class="container-fluid">
            <div class="container-fluid btn-toolbar">
                <div class="btn-group">
                    <a class="btn btn-large"
                        tal:attributes="href python:context_url+'/@@dashboard-releases'">
                        <i class="icon-file" />
                        Pressemitteilungen</a>
                    <a class="btn btn-large"
                        tal:attributes="href python:context_url+'/@@dashboard-invitations'">
                        <i class="icon-calendar" />
                        Presseeinladungen</a>
                    <a class="btn btn-large"
                        tal:attributes="href python:context_url+'/@@dashboard-schedule'">
                        <i class="icon-share-alt" />
                        Versand</a>
                </div>
            </div>
        </div>
    </div>
</div>