<div class="editbar" id="editbar">
    <div class="editbar-inner"
        tal:define="context_url viewlet/context_url;
                    home_url viewlet/my_workspace">
        <div class="container-fluid">
            <div class="container-fluid btn-toolbar">
                <div class="btn-group">
                    <a class="btn btn-large"
                        tal:attributes="href context_url">
                        <i class="icon-align-justify" />
                        Presse Center</a>
                    <a class="btn btn-large"
                        tal:attributes="href python:context_url+'/@@global-settings'">
                        <i class="icon-cog" />
                        Einstellungen</a>
                    <a class="btn btn-large"
                        tal:attributes="href python:context_url+'/kontakte'">
                        <i class="icon-list-alt" />
                        Adressverwaltung</a>
                    <a class="btn btn-large"
                        tal:attributes="href home_url">
                        <i class="icon-home" />
                        Arbeitsplatz</a>
                </div>
                <div class="btn-group">
                    <a class="btn btn-large"
                        tal:attributes="href python:home_url+'/@@dashboard-releases'">
                        <i class="icon-file" />
                        Pressemitteilungen</a>
                    <a class="btn btn-large"
                        tal:attributes="href python:home_url+'/@@dashboard-invitations'">
                        <i class="icon-calendar" />
                        Presseeinladungen</a>
                    <a class="btn btn-large"
                        tal:attributes="href python:home_url+'/@@dashboard-schedule'">
                        <i class="icon-share-alt" />
                        Versand</a>
                </div>
            </div>
        </div>
    </div>
</div>