<div class="editbar" id="editbar">
    <div class="editbar-inner"
        tal:define="context_url viewlet/context_url;
                    home_url viewlet/my_workspace;
                    portal_url context/portal_url;">
        <div class="container-fluid">
            <div class="container-fluid btn-toolbar">
                <div class="btn-group">
                    <a class="btn btn-large btn-info"
                        tal:attributes="href context_url">
                        <i class="icon-cog icon-white" />
                        Administration</a>
                </div>
                <div class="btn-group">
                    <a class="btn btn-large"
                        tal:attributes="href python:portal_url+'/presscenter/kontakte'">
                        <i class="icon-list-alt" />
                        Adressen</a>
                    <a class="btn btn-large"
                        tal:attributes="href python:portal_url+'/presscenter/@@workspaces'">
                        <i class="icon-user" />
                        Redakteure</a>
                    <a class="btn btn-large"
                        tal:attributes="href python:portal_url+'/presscenter/@@global-settings'">
                        <i class="icon-align-justify" />
                        Einstellungen</a>
                </div>
                <div class="btn-group">
                    <a class="btn btn-large"
                        tal:attributes="href python:portal_url+'/@@channel-statistics'">
                        <i class="icon-signal" />
                        Statistiken</a>
                </div>
            </div>
        </div>
    </div>
</div>