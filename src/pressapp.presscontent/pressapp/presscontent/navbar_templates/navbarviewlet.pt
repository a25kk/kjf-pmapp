<div class="navbar navbar-fixed-top" id="navbar">
    <div class="navbar-inner"
        tal:define="context_url viewlet/context_url;
                    portal_url viewlet/portal_url">
        <div class="container-fluid">
            <a href="" class="brand pull-right"
                tal:attributes="href portal_url">
                KJF Pressestelle</a>
            <a class="btn btn-navbar"
                data-toggle="collapse"
                data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <div class="nav-collapse" tal:condition="not:viewlet/anonymous">
                <ul class="nav"
                    tal:define="home_folder viewlet/home_url">
                    <li id="main-menu">
                        <a href="/"
                            data-traget="#main-menu"
                            tal:attributes="href home_folder">
                            <i class="icon-home icon-white" />
                            Arbeitsplatz
                        </a>
                    </li>
                    <li class="divider-vertical"></li>
                    <li><a href=""
                            tal:attributes="href python:home_folder+'/@@dashboard-releases'">
                        <i class="icon-file icon-white" />
                        Pressemitteilungen</a>
                    </li>
                    <li class="divider-vertical"></li>
                    <li><a href=""
                            tal:attributes="href python:home_folder+'/@@dashboard-invitations'">
                        <i class="icon-calendar icon-white" />
                        Presseeinladungen
                        </a>
                    </li>
                    <li class="divider-vertical"></li>
                    <li><a href=""
                            tal:attributes="href python:home_folder+'/@@dashboard-statistics'">
                        <i class="icon-share-alt icon-white" />
                            Statistik
                        </a>
                    </li>
                    <li class="divider-vertical"></li>
                    <li class="dropdown" tal:condition="viewlet/is_administrator">
                        <a href="/" class="dropdown-toggle"
                            data-toggle="dropdown"
                            tal:attributes="href python:portal_url+'/press-center'">
                            <i class="icon-cog icon-white" />
                            Administration
                            <b class="caret" />
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href=""
                                tal:attributes="href python:portal_url+'/presscenter/'">
                                <i class="icon-list" />
                                &Uuml;bersicht
                                </a>
                            </li>
                            <li><a href=""
                                    tal:attributes="href python:portal_url+'/presscenter/kontakte'">
                                <i class="icon-list-alt" />
                                Adressen
                                </a>
                            </li>
                            <li><a href=""
                                    tal:attributes="href python:portal_url+'/presscenter/@@workspaces'">
                                <i class="icon-user" />
                                Redakteure
                                </a>
                            </li>
                            <li><a href=""
                                tal:attributes="href python:portal_url+'/presscenter/@@global-settings'">
                                <i class="icon-align-justify" />
                                    Einstellungen
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav pull-right"
                    tal:define="home_folder viewlet/home_url">
                    <li class="dropdown active">
                        <a href=""
                            tal:attributes="href home_folder"
                            class="dropdown-toggle"
                            data-toggle="dropdown">
                            <i class="icon-user icon-white" />
                            John Doe
                            <b class="caret" />
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href=""
                                tal:attributes="href home_folder">
                                <i class="icon-home" />
                                Mein Arbeitsplatz</a>
                            </li>
                            <li><a href=""
                                tal:attributes="href python:home_folder + '/@@member-information'">
                                <i class="icon-cog" />
                                Kontoeinstellungen</a>
                            </li>
                            <li class="divider"></li>
                            <li><a href=""
                                tal:attributes="href python:portal_url + '/logout'">
                                <i class="icon-remove-sign" />
                                Abmelden</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>