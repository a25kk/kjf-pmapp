<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="pressapp.presscontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main"
        tal:define="memberinfo context/portal_membership/getMemberInfo;
                    member context/@@plone_portal_state/member;
                    name python:memberinfo['fullname'] or member.getId() or member.getId();
                    portal_url context/portal_url;
                    toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                    context_url context/absolute_url">
    
    <div class="container-fluid">
        <div class="page-header">
            <h1>Globale Einstellungen</h1>
        </div>
        
        <section>
          <a class="btn btn-primary pull-right"
                    tal:attributes="href python:context_url+'/@@update-settings'">
                    <i class="icon-edit icon-white" />
                    Bearbeiten</a>
            <h2>Versand Einstellungen</h2>
              <table class="table table-striped">
                <tbody>
                  <tr>
                    <td><strong>Absenderadresse:</strong></td>
                    <td tal:content="context/email">E-Mail</td>
                  </tr>
                  <tr>
                    <td><strong>Absendername:</strong></td>
                    <td tal:content="context/name" />
                  </tr>
                  <tr>
                    <td><strong>Standard Testempf&auml;nger:</strong></td>
                    <td tal:content="context/testEmail" />
                  </tr>
                  <tr>
                    <td><strong>Liste Testempf&auml;nger:</strong></td>
                    <td>
                      <tal:block tal:repeat="item context/testRecipients">
                        <span tal:replace="item" /><br />
                      </tal:block>
                    </td>
                  </tr>
                </tbody>
              </table>

              <div class="btn-group pull-right">
                <a href="" class="btn btn-primary dropdown-toggle"
                  data-toggle="dropdown">
                  <i class="icon-pencil icon-white" />
                  Bearbeiten
                  <span class="caret"></span>
                </a>
                  <ul class="dropdown-menu">
                    <li><a href=""
                          tal:attributes="href python:context_url + '/@@update-pr-template'">
                        <i class="icon-edit" />
                        Template Pressemitteilung</a></li>
                    <li><a href=""
                          tal:attributes="href python:context_url + '/@@update-pi-template'">
                        <i class="icon-edit" />
                        Template Presseeinladung</a></li>
                    <li><a href=""
                          tal:attributes="href python:context_url + '/@@update-stylesheet'">
                        <i class="icon-edit" />
                        CSS Vorlage</a></li>
                  </ul>
              </div>
              <h2>E-Mail Templates / CSS Vorgaben <small>Versandvorlagen</small></h2>
              <div class="tile">
                <a class="btn  btn-small btn-info show-details pull-right">
                    <i class="icon-arrow-down icon-white" />
                    Details einblenden</a>
                    <div class="xbox details visualClear">
                        <div class="visualClear">&nbsp;</div>
                        <pre tal:content="context/stylesheet" />
                    </div>
              <h4>CSS / Stylesheet</h4>
              </div>
              <div class="tile">
                <a class="btn  btn-small btn-info show-details pull-right">
                    <i class="icon-arrow-down icon-white" />
                    Details einblenden</a>
                    <div class="xbox details visualClear">
                        <div class="visualClear">&nbsp;</div>
                        <pre tal:content="context/mailtemplate" />
                    </div>
              <h4>Pressemitteilung</h4>
              </div>
              <div class="tile">
                <a class="btn  btn-small btn-info show-details pull-right">
                    <i class="icon-arrow-down icon-white" />
                    Details einblenden</a>
                    <div class="xbox details visualClear">
                        <div class="visualClear">&nbsp;</div>
                        <pre tal:content="context/mailtemplate_pi" />
                    </div>
              <h4>Presseeinladung</h4>
              </div>
        </section>
        
    </div>
  </metal:content-core>
</metal:main>

</body>
</html>

