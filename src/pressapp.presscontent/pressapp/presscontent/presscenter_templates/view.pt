<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="pressapp.presscontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main"
        tal:define="memberinfo context/portal_membership/getMemberInfo;
                    member context/@@plone_portal_state/member;
                    name python:memberinfo['fullname'] or member.getId() or member.getId();
                    portal_url context/portal_url;
                    toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                    context_url context/absolute_url">
    
    <div class="container-fluid">
        
        <div class="page-header">
            <h1>Administration</h1>
        </div>

    <div class="box row-fluid">
      <div class="btn-group pull-right">
                <a href="" class="btn"
                    rel="twipsy"
                    data-original-title="&Uuml;bersicht &uuml;ber die Verwendung von Verteilern in Presseinhalten"
                    tal:attributes="href python:portal_url + '/presscenter/kontakte/@@channel-statistics'">
                    <i class="icon-signal" />
                    Statistik</a>
            </div>
        <h3><i class="icon-search" />
        Sofortsuche</h3>
          <form name="searchform" id="searchGadget_form" 
                action="search"
                tal:attributes="action string:${portal_url}/search;
                                id string:search_form">

              <div class="LSBox">
              <input name="SearchableText"
                     type="text"
                     size="18"
                     value=""
                     title="..."
                     accesskey="4"
                     i18n:attributes="title title_search_site;"
                     tal:attributes="value request/form/SearchableText|nothing;
                                     id string:searchGadget"
                     class="searchField inputLabel" />

              <input class="searchButton btn primary small"
                     type="submit"
                     value="Suchen"
                     i18n:attributes="value label_search;" />

              <div class="LSResult" id="LSResult" style=""><div class="LSShadow" id="LSShadow"></div></div>
              </div>
          </form>
    </div>

        <div class="row-fluid">
          <div class="span4">
            <div class="page-header">
                <h2>
                  <a tal:attributes="href python:context_url+'/kontakte'"
                    rel="twipsy"
                    data-placement="right"
                    data-original-title="Verwaltung von E-Mail-Adressen und Verteilerlisten">
                    Adressen</a>
                </h2>
            </div>
            <tal:block tal:define="stats view/statistics">
              <div class="tile stats">
                <h4><span class="badge badge-info" tal:content="stats/channels" />
                  Verteiler
                </h4>
              </div>
              <div class="tile stats">
                <h4><span class="badge badge-info" tal:content="stats/recipients" />
                  Adressen 
                </h4>
              </div>
            </tal:block>
          </div>
          <div class="span4">
            <section>
                  <div class="page-header">
                      <h2><a href="" tal:attributes="href python:context_url + '/@@workspaces'"
                            rel="twipsy"
                            data-placement="right"
                            data-original-title="&Uuml;bersicht Redakteure">
                        Redakteure</a>
                      </h2>
                  </div>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Redakteur</th>
                                <th>Zuletzt angemeldet</th>
                            </tr>
                        </thead>
                        <tbody tal:condition="view/has_pressrooms">
                            <tal:block tal:repeat="item view/pressrooms">
                              <tr tal:define="rowcount repeat/item/number;">
                                  <td tal:content="rowcount">1</td>
                                  <td><a href="" tal:attributes="href item/getURL"
                                          tal:content="item/Title" /></td>
                                  <td tal:define="owner item/Creator;
                                                  login_time python:view.memberinfo(owner)">
                                      <span tal:replace="python:toLocalizedTime(login_time)" />
                                  </td>
                              </tr>
                            </tal:block>
                        </tbody>
                        <tbody tal:condition="not:view/has_pressrooms">
                              <tr>
                                  <td colspan="4">
                                      <div class="alert alert-block alert-error">
                                            <a class="close" href="#">Ã—</a>
                                            <p><strong i18n:translate="">
                                                No pressrooms available!</strong></p>
                                      </div>
                                  </td>
                              </tr>
                        </tbody>
                    </table>
          </section>
          </div>
        <div class="span4">
          <div class="page-header">
            <h2><a href="" tal:attributes="href python:context_url + '/@@global-settings'"
                  rel="twipsy"
                  data-placement="right"
                  data-original-title="Verwaltung der E-Mail-Vorlagen und der Standard-Einstellungen">
                Einstellungen</a>
            </h2>
          </div>
          <table class="table table-condensed">
            <tbody>
              <tr>
                <td><strong>Absender:</strong></td>
                <td tal:content="context/name" />
              </tr>
              <tr>
                <td><strong>E-Mail:</strong></td>
                <td tal:content="context/email" />
              </tr>
              <tr>
                <td><strong>Test E-Mails:</strong></td>
                <td tal:define="items context/testRecipients">
                  <tal:block tal:repeat="item items">
                    <span tal:replace="item" />
                  </tal:block>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        </div>
    </div>
  </metal:content-core>
</metal:main>

</body>
</html>

