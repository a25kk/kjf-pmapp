<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="pressapp.presscontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main"
        tal:define="memberinfo context/portal_membership/getMemberInfo;
                    member context/@@plone_portal_state/member;
                    name python:memberinfo['fullname'] or member.getId() or member.getId();
                    portal_url context/portal_url;
                    toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                    context_url context/absolute_url">
    
  <div class="container-fluid">
        
    <header id="page-header">
      <div class="row"
        tal:define="navigation_root_url context_url">
        <div class="span9">
          <h1>Jobcenter
            <!--<small tal:condition="view/has_filter"
              tal:define="info view/filter_info">
              <span tal:attributes="class string:label label-${info/klass}"
                tal:content="info/state" />
            </small>-->
          </h1>
          <p tal:define="time context/modified" class="discreet">
                <span i18n:translate="">Last changed:</span>
                <span tal:content="time"
                   tal:attributes="data-appui string:prettydate;
                                   title time" />
          </p>
        </div>
        <div class="span3">
          <form action="."
          tal:attributes="action python:context_url + '/@@search'">
            <div class="input-group span12">
              <input id="SearchableText"
                name="SearchableText"
                type="text">
              <span class="input-group-btn">
                <button class="btn" type="button">Search</button>
              </span>
            </div>
        </form>
        </div>
      </div>
    </header>

    <section id="content-core">
      <div class="xxxwindow-column">
        <div class="row">
          <div class="span9">
            <section class="window-column">
              <div class="window-column-content"
                tal:define="pressidx view/presscontent_index">
                <div class="row">
                  <div class="span6">
                    <div class="panel" tal:define="pr_idx view/pr_index">
                      <div class="statuspanel">
                        <div class="top success">
                          <i class="icon-file-alt icon-4x"></i>
                          <h6>PM</h6>
                        </div>
                        <div class="bottom">
                          <h2 tal:content="view/pr_index">100</h2>
                          <h6>Pressemitteilungen</h6>
                        </div>
                      </div>
                      <input type="text"
                        value="75"
                        class="dial"
                        data-appui="knob"
                        data-thickness=".4"
                        data-fgColor="#999"
                        data-bgColor="#ffffff"
                        data-readOnly="true"
                        tal:attributes="data-max pressidx;
                                        value pr_idx">
                        <hr class="visualClear">
                      <h4>Pressemitteilungen</h4>
                      <!--<div class="progress progress-success"
                        tal:define="progress python:view.get_percental_value(active_idx)">
                        <div class="bar"
                          tal:attributes="style python:'width: ' + progress + '%'"
                          tal:content="string:${progress}%">
                        </div>
                      </div>-->
                      <p>
                        <a href="" class="btn"
                          tal:attributes="href python:context_url + '?filter=published'">
                          Pressemitteilungen zeigen
                        </a>
                      </p>
                      <hr />
                    </div>
                  </div>
                  <div class="span6">
                    <div class="panel" tal:define="pi_idx view/pi_index">
                      <div class="statuspanel">
                        <div class="top danger">
                          <i class="icon-calendar icon-4x"></i>
                          <h6>PE</h6>
                        </div>
                        <div class="bottom">
                          <h2 tal:content="view/pi_index">100</h2>
                          <h6>Presseeinladung</h6>
                        </div>
                      </div>
                      <input type="text"
                          value="75"
                          class="dial"
                          data-appui="knob"
                          data-thickness=".4"
                          data-fgColor="#999"
                          data-bgColor="#ffffff"
                          data-readOnly="true"
                          tal:attributes="data-max pressidx;
                                          value pi_idx">
                          <hr class="visualClear">
                    </div>
                  </div>
                </div>
              </div>
                  <div class="page-header">
                      <h2><a href="" tal:attributes="href python:context_url + '/@@workspaces'"
                            rel="twipsy"
                            data-placement="right"
                            data-original-title="&Uuml;bersicht Redakteure">
                        Redakteure</a>
                      </h2>
                  </div>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Redakteur</th>
                                <th>Zuletzt angemeldet</th>
                            </tr>
                        </thead>
                        <tbody tal:condition="view/has_pressrooms">
                            <tal:block tal:repeat="item view/pressrooms">
                              <tr tal:define="rowcount repeat/item/number;">
                                  <td tal:content="rowcount">1</td>
                                  <td><a href="" tal:attributes="href item/getURL"
                                          tal:content="item/Title" /></td>
                                  <td tal:define="owner item/Creator;
                                                  login_time python:view.memberinfo(owner)">
                                      <span tal:replace="python:toLocalizedTime(login_time)" />
                                  </td>
                              </tr>
                            </tal:block>
                        </tbody>
                        <tbody tal:condition="not:view/has_pressrooms">
                              <tr>
                                  <td colspan="4">
                                      <div class="alert alert-block alert-error">
                                            <a class="close" href="#">Ã—</a>
                                            <p><strong i18n:translate="">
                                                No pressrooms available!</strong></p>
                                      </div>
                                  </td>
                              </tr>
                        </tbody>
                    </table>
          </section>
          </div>
        <div class="span3">
          <aside id="sidebar">
            <div class="stats widget">
              <div class="stat info">
                <h2 tal:content="view/presscontent_index">72</h2>
                <h6>Presseinhalte</h6>
              </div>
            </div>
            <hr>
              <h3>Zuletzt ver&auml;ndert</h3>
              <div class="history-listing" tal:define="history view/get_history">
                <tal:items tal:repeat="entry history">
                  <h6><span tal:replace="entry/title" /></h6>
                  <p class="discreet">
                    <span tal:content="entry/action" i18n:translate="">
                      Action</span>
                    <span tal:define="time entry/timestamp"
                        tal:content="time"
                        tal:attributes="data-appui string:prettydate;
                                        title time" />
                      <span>by <span tal:replace="entry/actorname" /></span>
                  </p>
                </tal:items>
              </div>
            <hr>
            <h2><a href="" tal:attributes="href python:context_url + '/@@global-settings'"
                  rel="twipsy"
                  data-placement="right"
                  data-original-title="Verwaltung der E-Mail-Vorlagen und der Standard-Einstellungen">
                Einstellungen</a>
            </h2>
          <table class="table table-condensed">
            <tbody>
              <tr>
                <td><strong>Absender:</strong></td>
                <td tal:content="context/name" />
              </tr>
              <tr>
                <td><strong>E-Mail:</strong></td>
                <td tal:content="context/email" />
              </tr>
              <tr>
                <td><strong>Test E-Mails:</strong></td>
                <td tal:define="items context/testRecipients">
                  <tal:block tal:repeat="item items">
                    <span tal:replace="item" />
                  </tal:block>
                </td>
              </tr>
            </tbody>
          </table>
          </aside>
        </div>
        </div>
      </div>
    </section>
    </div>
  </metal:content-core>
</metal:main>

</body>
</html>

