<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="pressapp.presscontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main"
        tal:define="memberinfo context/portal_membership/getMemberInfo;
                    member context/@@plone_portal_state/member;
                    name python:memberinfo['fullname'] or member.getId() or member.getId();
                    portal_url context/portal_url;
                    toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                    context_url context/absolute_url">
    
    <div class="container-fluid">
        <div class="page-header" id="page-header">
          <div class="row"
            tal:define="navigation_root_url context_url">
            <div class="col col-lg-9">
              <h1>Redakteure
                <!--<small tal:condition="view/has_filter"
                  tal:define="info view/filter_info">
                  <span tal:attributes="class string:label label-${info/klass}"
                    tal:content="info/state" />
                </small>-->
              </h1>
              <p class="discreet">
                Liste der vorhandenen Benutzerkonten
              </p>
            </div>
            <div class="col col-lg-3">
              <div class="pull-right">
                <h4>Benutzerkonten</h4>
              </div>
            </div>
          </div>
        </div>
        
        <section id="content-core">
        <div class="row">
          <div class="col col-lg-9">
            <div class="window-column">

              <tal:pms tal:condition="view/has_workspaces">
                <div class="tile-wrapper"
                  tal:define="Batch python:modules['Products.CMFPlone'].Batch;
                          b_size python:int(request.get('b_size', 20));
                          b_start python:int(request.get('b_start', 0));
                          items view/workspaces;
                          items_count python:len(items);
                          batch python:Batch(items, b_size, b_start);">
                  <div class="tile" tal:repeat="item batch">
                  <div class="row"
                    tal:define="member_id item/Creator;
                                memberinfo python:view.memberdetails(member_id);">
                    <div class="col col-lg-2">
                      <h6 tal:content="memberinfo/location">Item Type
                      </h6>
                      <p>
                        <small tal:content="memberinfo/organization">Unpublished</small>
                      </p>
                    </div>
                    <div class="col col-lg-6"
                      tal:define="state item/review_state">
                      <h4>
                        <span tal:content="item/Title" />
                        <small class="discreet" tal:content="memberinfo/home_page" />
                      </h4>
                      <p>
                        <small tal:define="modified memberinfo/last_login_time">
                          Zuletzt angemeldet:
                          <span tal:content="modified"
                            tal:attributes="data-appui string:prettydate;
                                            title modified" />
                        </small>
                      </p>
                    </div>
                    <div class="col col-lg-4">
                        <a class="btn btn-mini pull-right"
                            tal:attributes="href item/getURL">
                            Anzeigen</a>
                    </div>
                  </div>
                  </div><!-- /tile -->
                  <div metal:use-macro="context/batch_macros/macros/navigation" />
                </div><!-- /tile-wrapper -->
              </tal:pms>

              <table class="table table-condensed" tal:content="nothing">
                <thead>
                  <tr>
                    <th>Benutzerkonto</th>
                    <th>Organisation</th>
                    <th>Ort</th>
                    <th>URL</th>
                    <th>Zuletzt angemeldet</th>
                    <th>Aktionen</th>
                  </tr>
                </thead>
                <tbody>
                  <tal:block tal:condition="view/has_workspaces">
                    <tr tal:repeat="item view/workspaces">
                      <tal:block tal:define="member_id item/Creator;
                                             memberinfo python:view.memberdetails(member_id);">
                      <td><a href=""
                            tal:attributes="href item/getURL">
                            <strong tal:content="item/Title">
                            Title</strong></a>
                      </td>
                      <td tal:content="memberinfo/organization"></td>
                      <td tal:content="memberinfo/location"></td>
                      <td tal:content="memberinfo/home_page"></td>
                      <td tal:define="login memberinfo/last_login_time">
                        <span tal:replace="python:toLocalizedTime(login)" />,
                        <span tal:replace="python:toLocalizedTime(login, time_only=1)" /> Uhr
                      </td>
                      <td><a href="" tal:attributes="href item/getURL">
                          Anzeigen</a></td>
                      </tal:block>
                    </tr>
                  </tal:block>
                  <tr tal:condition="not:view/has_workspaces">
                    <td>
                      <div class="alert alert-block alert-error">
                        <h4 class="alert-heading">Hinweis</h4>
                        Leider konnten keine Benutzerkonten gefunden werden
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <div class="col col-lg-3">
            <aside id="sidebar">
              <p class="lead" i18n:translate="">
                Overview of registered members and their workspaces</p>
              <hr>
              <p>Users are redirected to their personal workspaces after signing
                in to the press application, where they create and manage their
                press contents
              </p>
              <hr>
            </aside>
          </div>
        </div>
        </section>
        
    </div>
  </metal:content-core>
</metal:main>

</body>
</html>

