<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="pressapp.presscontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">
    
        <h1>Arbeitsplatz <span tal:replace="context/Title" />!</h1>
        <p class="visualClear">Lorem ipsum dolor sit amet.</p>
      
      <div class="container"
        tal:define="context_url context/absolute_url">
          <div class="box">
          <div class="row">
              <div class="cell position-0 width-1:2">
                  <p class="pull-right">
                      <a class="editbtn mini standalone popoverForm"
                        tal:attributes="href python:context_url+'/@@add-press-release'">
                          Neu anlegen</a>
                  </p>
                  <h2>Pressemitteilungen</h2>
                  <table class="zebra-striped">
                      <thead>
                          <tr>
                              <th>#</th>
                              <th>Pressemitteilung</th>
                              <th>Status</th>
                              <th>Aktionen</th>
                          </tr>
                      </thead>
                      <tbody tal:condition="view/has_releases">
                          <tal:block tal:repeat="item view/pressreleases">
                            <tr tal:define="rowcount repeat/item/number;">
                                <td tal:content="rowcount">1</td>
                                <td><a href="" tal:attributes="href item/getURL"
                                        tal:content="item/Title" /></td>
                                <td tal:define="state item/review_state">
                                    <span class="label info"
                                        i18n:translate=""
                                        tal:content="state">State</span>
                                </td>
                                <td tal:define="item_url item/getURL">
                                    <a class="editbtn mini left popoverForm"
                                        tal:attributes="href python:item_url+'/edit'">Bearbeiten</a>
                                    <a class="editbtn mini right"
                                        tal:attributes="href python:item_url+'/view'">Anzeigen</a>
                                </td>
                            </tr>
                          </tal:block>
                      </tbody>
                      <tbody tal:condition="not:view/has_releases">
                            <tr>
                                <td colspan="4">
                                    <div class="alert-message block-message error">
                                          <a class="close" href="#">×</a>
                                          <p><strong i18n:translate="">
                                              No press releases available!</strong></p>
                                    </div>
                                </td>
                            </tr>
                      </tbody>
                  </table>
              </div>
              <div class="cell position-1:2 width-1:2">
                  <p class="pull-right">
                      <a class="editbtn mini standalone popoverForm"
                        tal:attributes="href python:context_url+'/@@add-press-invitation'">
                        Neu anlegen</a></p>
                  <h2>Presseeinladungen</h2>
                  <table class="zebra-striped">
                      <thead>
                          <tr>
                              <th>#</th>
                              <th>Pressemitteilung</th>
                              <th>Status</th>
                              <th>Aktionen</th>
                          </tr>
                      </thead>
                      <tbody tal:condition="view/has_invitations">
                            <tal:block tal:repeat="item view/contained_invitations">
                              <tr tal:define="rowcount repeat/item/number;">
                                  <td tal:content="rowcount">1</td>
                                  <td><a href="" tal:attributes="href item/getURL"
                                          tal:content="item/Title" /></td>
                                  <td tal:define="state item/review_state">
                                      <span class="label info"
                                          i18n:translate=""
                                          tal:content="state">State</span>
                                  </td>
                                  <td tal:define="item_url item/getURL">
                                      <a class="editbtn mini left"
                                          tal:attributes="href python:item_url+'/edit'">Edit</a>
                                      <a class="editbtn mini right"
                                          tal:attributes="href python:item_url+'/view'">View</a>
                                  </td>
                              </tr>
                            </tal:block>
                      </tbody>
                      <tbody tal:condition="not:view/has_invitations">
                          <tr>
                              <td colspan="4">
                                  <div class="alert-message block-message error">
                                        <a class="close" href="#">×</a>
                                        <p><strong i18n:translate="">
                                            No press invitations available!</strong></p>
                                  </div>
                              </td>
                          </tr>
                      </tbody>
                  </table>
                </div>
              <div class="visualClear"><!-- --></div>
          </div>
          <div class="visualClear"><!-- --></div>
          </div>
      </div>
    
  </metal:content-core>
</metal:main>

</body>
</html>

