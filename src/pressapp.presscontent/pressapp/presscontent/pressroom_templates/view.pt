<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="pressapp.presscontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">
    
     <div class="box">
        <h1>Arbeitsplatz <span tal:replace="context/Title" />!</h1>
        <p class="visualClear">Lorem ipsum dolor sit amet.</p>
      </div>
    
      <div class="container">
        <div class="row">
          <div class="cell position-0 width-1:3">
            <div class="box">
            <h2>Press Releases</h2>
            <p><a class="btn" href="#">View details &raquo;</a></p>
            </div>
          </div>
          <div class="cell position-1:3 width-1:3">
            <h2>Press Invitations</h2>
            <p><a class="btn" href="#">View details &raquo;</a></p>
          </div>
          <div class="cell position-2:3 width-1:3">
            <h2>Schedule</h2>
            <p><a class="btn" href="#">View details &raquo;</a></p>
          </div>
        </div>
        <div class="visualClear"><!-- --></div>
      </div>
    
    <tal:block tal:condition="view/has_releases">
    <section tal:define="items view/pressreleases">
        <div tal:repeat="item items">
            <h2 tal:content="item/Title" />
        </div>
    </section>
    </tal:block>
    
  </metal:content-core>
</metal:main>

</body>
</html>

